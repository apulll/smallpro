.user-screnn-box {
  position: relative;
  width: 100%;
}
.user-screnn {
  height: 400rpx;
  overflow: hidden;
}
.nav-list {
  display: flex;
  flex-direction: row;
}
.user-screnn image {
  width: 100%;
}
.user-screnn-head {
  position: absolute;
  width: 200rpx;
  overflow: hidden;
  top: 275rpx;
  left: 50%;
  margin-left: -75rpx;
}
.user-screnn-headImg {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  display: block;
}
.user-screnn-headtext {
  font-size: 30rpx;
}
.user-follow {
  width: 100%;
  overflow: hidden;
  margin: 100rpx 0 0 0;
}
.user-follow-list {
  float: left;
  width: 50%;
  text-align: center;
}
.user-follow-list text{
  display: block;
}
.fs50 {
  font-size: 50rpx;
}
.user-foller-list {
  padding: 20rpx 0 20rpx 0rpx;
}
.user-foller-item {
  width: 330rpx;
  margin-left: 25rpx;
  margin-bottom: 25rpx; 
}
.user-foller-item-image{
  width: 100%;
  height: 400rpx;
  display: block;
}
.user-foller-item-head {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-top: 10rpx;
}
.user-foller-item-follow {
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx 5rpx 0 0;
}
.textview {
  width: 200rpx;
  height: 100rpx;
  background: #ccc;
}
.clear {
  clear: both;
}