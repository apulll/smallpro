<view class='container-fluid' style='align-items:left;'>
  <view class='user-screnn-box'>
    <view class='user-screnn'>
      <image src="/images/love_01.png"></image>
    </view>
    <view class='user-screnn-head'>
      <image class='user-screnn-headImg' src="/images/love_02.png" ></image>
      <text class='user-screnn-headtext'>走猫步的鱼</text> 
    </view>
  </view>

  <view class='user-follow'>
    <view class='user-follow-list' bindtap="getUserInfo">
      <text class='fs50'>228</text>
      <text class='colorGray'>收到的祝福</text>
    </view>
    <view class='user-follow-list'>
      <text class='fs50'>189</text>
      <text class='colorGray'>送出的祝福</text>
    </view>
  </view>


  <view class='user-foller-list'>
    <view class='overflow'>
      <image class='top left' src='/images/icon/icon_1.png' style='width:80rpx;height:80rpx;'></image>
      <text class='mgt10 fleft'>爱情</text>
    </view>
      
    <view wx:for="{{userDataList}}" wx:key="{{item.id}}" class='user-foller-item'>
        <image mode='aspectFill' class='user-foller-item-image' src="{{item.template.bg_imgsumb}}"></image> 
        <view>
          <text class='fs20 gray-676767'>{{item.created_at}}</text>
        </view>
        <view>
          <view class='fleft'>
            <image class="fleft user-foller-item-head" src='/images/love_02.png'></image>
            <text class='fs10'>走猫步的鱼</text>
          </view>
          <view class='fright'>
            <image class='fleft user-foller-item-follow' src='/images/icon/follow_active.png'></image>
            <text class='fleft'>{{item.liked_total}}</text>
          </view>
        </view>  
    </view>

  </view>
</view>



